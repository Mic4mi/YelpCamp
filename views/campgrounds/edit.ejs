<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Eddit <%= campground.name %></h1>
        <div style="width: 30%; margin: 1.563em auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" step="0.01" min="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[img]" value="<%= campground.img %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[desc]" value="<%= campground.desc %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>